{
    "name": "vscode-steam-vgui",
    "displayName": "VGUI Syntax Highlighting & Code Snippets",
    "description": "Syntax Highlighting and Code Snippets for VGUI (Steam's Client DSL)",
    "icon": "assets/extension-icon.png",
    "galleryBanner": {
      "color": "#2d323b",
      "theme": "dark"
    },
    "version": "0.0.1",
    "license": "MIT",
    "publisher": "pddstudio",
    "author": {
      "name": "Patrick Jung",
      "email": "patrick.pddstudio@gmail.com"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/pddstudio/vscode-steam-vgui"
    },
    "bugs": {
      "url": "https://github.com/pddstudio/vscode-steam-vgui/issues"
    },
    "scripts": {
      "build": "echo 'No building required!'",
      "preci:package": "mkdir -p ./dist",
      "ci:package": "vsce package --yarn -o dist/extension-steam-vgui.vsix",
      "ci:test": "echo 'No tests provided!'",
      "ci:publish": "vsce publish --yarn -p ${CI_VSCE_ACCESS_TOKEN} --packagePath dist/extension-steam-vgui.vsix",
      "publish": "vsce publish --yarn",
      "clean": "rm -rf ./dist"
    },
    "dependencies": {},
    "devDependencies": {},
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "vgui",
            "aliases": ["Steam VGUI", "VGUI", "vgui"],
            "extensions": [".res",".layout", ".styles"],
            "configuration": "./vgui.configuration.json"
        }],
        "grammars": [{
            "language": "vgui",
            "scopeName": "source.steam-vgui",
            "path": "./syntaxes/vgui.tmLanguage.json"
        }],
        "snippets": [
          {
            "language": "vsgui",
            "path": "./snippets/vgui.json"
          }
        ]
    }
}
